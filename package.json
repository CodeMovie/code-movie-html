{
  "name": "@codemovie/code-movie-html",
  "version": "1.0.0",
  "description": "Use HTML as a DSL for Code.Movie",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.js",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "scripts": {
    "lint": "eslint src",
    "build": "rm -rf dist && esbuild src/*.ts --format=esm --target=es2020 --metafile=meta.json --minify --bundle --external:@codemovie/code-movie --outdir=dist",
    "build:dev": "rm -rf dist && esbuild src/*.ts --format=esm --target=es2020 --metafile=meta.json --bundle --external:@codemovie/code-movie --outdir=dist",
    "types": "tsc",
    "demo": "npx serve",
    "prepareRelease": "npm run lint && npm run types && npm run build",
    "release": "release-it"
  },
  "author": "peter@peterkroener.de",
  "license": "MIT",
  "devDependencies": {
    "@codemovie/code-movie": "^0.0.20",
    "@codemovie/code-movie-runtime": "^2.0.1",
    "esbuild": "^0.23.1",
    "eslint": "^9.9.1",
    "eslint-config-prettier": "^9.1.0",
    "globals": "^15.9.0",
    "release-it": "^17.6.0",
    "typescript": "^5.5.4",
    "typescript-eslint": "^8.3.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
